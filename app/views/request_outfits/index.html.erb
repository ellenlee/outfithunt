<div class="user-request">
  <div class="request-item">
    <%= image_tag @request.img.url(:thumb) %>
  </div>
  <ul class="list-inline tag_list">
    <li><%= @request.color.name %></li>
    <li><%= @request.material.name %></li>
    <li><%= @request.category.name %></li>
    <li>style</li>
  </ul>
</div>
<div class="list-outfits">
  <% @outfits.each do |outfit| %>
  	<%= link_to (image_tag outfit.image_url, height: '60px'), request_outfit_path(@request, outfit) %>
  <% end %>
</div>

<script>
  $(".list-outfits img").eq(0).addClass("recommend");
  $(".list-outfits img").eq(3).addClass("recommend");
  $(".list-outfits img").eq(5).addClass("recommend");
  $(".list-outfits img").eq(8).addClass("recommend");
  $(".list-outfits img").eq(-1).addClass("recommend");
</script>